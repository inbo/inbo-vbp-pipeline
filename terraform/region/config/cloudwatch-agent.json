{
  "agent": {
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
    "debug": false,
    "run_as_user": "cwagent"
  },
  "metrics": {
    "namespace": "Inbo/VBP",
    "append_dimensions": {
      "InstanceId": "$${aws:InstanceId}",
      "Application": "$${aws:Tag_Application}",
      "EMRJobFlowId": "$${aws:Tag_aws:elasticmapreduce:job-flow-id}",
      "EMRInstanceGroupRole": "$${aws:Tag_aws:elasticmapreduce:instance-group-role}"
    },
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_user",
          "cpu_usage_system",
          "cpu_usage_iowait"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": true
      },
      "mem": {
        "measurement": [
          "mem_used_percent",
          "mem_used",
          "mem_available"
        ],
        "metrics_collection_interval": 60
      },
      "disk": {
        "measurement": [
          "disk_used",
          "disk_free",
          "disk_used_percent",
          "diskio_read_bytes",
          "diskio_write_bytes",
          "diskio_io_time"
        ],
        "metrics_collection_interval": 60
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/emr/instance-controller/log/bootstrap-actions/*/stdout",
            "log_group_name": "${log_group_name}",
            "log_stream_name": "emr/{instance_id}",
            "publish_multi_logs": true
          },
          {
            "file_path": "/emr/instance-controller/log/bootstrap-actions/*/stderr",
            "log_group_name": "${log_group_name}",
            "log_stream_name": "emr/{instance_id}",
            "publish_multi_logs": true
          },
          {
            "file_path": "/mnt/var/log/hadoop/steps/*/stdout",
            "log_group_name": "${log_group_name}",
            "log_stream_name": "emr/{instance_id}",
            "publish_multi_logs": true,
            "timestamp_format": "%Y-%m-%d %H:%M:%S,%f",
            "multi_line_start_pattern": "{timestamp_regex}"
          },
          {
            "file_path": "/mnt/var/log/hadoop/steps/*/stderr",
            "log_group_name": "${log_group_name}",
            "log_stream_name": "emr/{instance_id}",
            "publish_multi_logs": true,
            "timestamp_format": "%Y-%m-%d %H:%M:%S,%f",
            "multi_line_start_pattern": "{timestamp_regex}"
          }
        ]
      }
    }
  }
}