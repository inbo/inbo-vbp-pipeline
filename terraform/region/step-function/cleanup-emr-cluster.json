{
  "Comment": "Cleanup a running EMR Cluster",
  "StartAt": "DynamoDB GetItem",
  "States": {
    "DynamoDB GetItem": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:getItem",
      "Arguments": {
        "TableName": "{% $states.context.Execution.Input.config.dynamodb_table_name %}",
        "Key": {
          "PK": {
            "S": "{% 'RUN#' & $states.context.Execution.Input.rootPipelineName %}"
          },
          "SK": {
            "S": "RUN"
          }
        }
      },
      "Assign": {
        "config": "{% $states.context.Execution.Input.config %}",
        "dataResourceId": "{% $states.context.Execution.Input.dataResourceId %}"
      },
      "Next": "Has a running cluster"
    },
    "Has a running cluster": {
      "Type": "Choice",
      "Choices": [
        {
          "Next": "EMR TerminateCluster",
          "Condition": "{% $exists($states.input.Item.ClusterId.S) %}",
          "Assign": {
            "clusterId": "{% $states.input.Item.ClusterId.S %}"
          }
        }
      ],
      "Default": "Do nothing"
    },
    "Do nothing": {
      "Type": "Pass",
      "End": true
    },
    "EMR TerminateCluster": {
      "Type": "Task",
      "Resource": "arn:aws:states:::elasticmapreduce:terminateCluster",
      "Arguments": {
        "ClusterId": "{% $clusterId %}"
      },
      "Next": "Remove ClusterId"
    },
    "Remove ClusterId": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Arguments": {
        "TableName": "{% $config.dynamodb_table_name %}",
        "Key": {
          "PK": {
            "S": "{% 'RUN#' & $states.context.Execution.Input.rootPipelineName %}"
          },
          "SK": {
            "S": "RUN"
          }
        },
        "UpdateExpression": "REMOVE ClusterId"
      },
      "End": true
    }
  },
  "QueryLanguage": "JSONata"
}
