{
  "Comment": "Starts an EMR cluster, processes data resources in parallel, and terminates the cluster",
  "StartAt": "Get State-machine Config",
  "States": {
    "Get State-machine Config": {
      "Type": "Task",
      "Arguments": {
        "Name": "inbo-vbp-pipelines-config"
      },
      "Resource": "arn:aws:states:::aws-sdk:ssm:getParameter",
      "Next": "Parallel",
      "Assign": {
        "config": "{% $parse($states.result.Parameter.Value) %}",
        "solrCollection": "{% $states.input.solrCollection %}"
      }
    },
    "Parallel": {
      "Type": "Parallel",
      "Next": "Process Data Resources",
      "Branches": [
        {
          "StartAt": "Need to process all dataresources?",
          "States": {
            "Need to process all dataresources?": {
              "Type": "Choice",
              "Choices": [
                {
                  "Next": "Get list of all dataresources",
                  "Condition": "{% $not($exists($states.context.Execution.Input.dataResources)) or $states.context.Execution.Input.dataResources = \"all\"  %}"
                }
              ],
              "Default": "Use Provided List of Data Resources"
            },
            "Use Provided List of Data Resources": {
              "Type": "Pass",
              "End": true,
              "Output": "{% $states.context.Execution.Input.dataResources  %}"
            },
            "Get list of all dataresources": {
              "Type": "Task",
              "Resource": "arn:aws:states:::http:invoke",
              "Arguments": {
                "ApiEndpoint": "{% $config.collectory_base_url & '/ws/dataResource/' %}",
                "Method": "GET",
                "Authentication": {
                  "ConnectionArn": "{% $config.portal_authenticated_connection_arn %}"
                }
              },
              "Retry": [
                {
                  "ErrorEquals": ["States.ALL"],
                  "BackoffRate": 2,
                  "IntervalSeconds": 1,
                  "MaxAttempts": 3,
                  "JitterStrategy": "FULL"
                }
              ],
              "End": true,
              "Output": "{% $states.result.ResponseBody.uid %}"
            }
          }
        },
        {
          "StartAt": "Get Species Lists to Index",
          "States": {
            "Get Species Lists to Index": {
              "Type": "Task",
              "Resource": "arn:aws:states:::http:invoke",
              "Arguments": {
                "ApiEndpoint": "{% $config.species_list_base_url & '/ws/speciesList' %}",
                "Method": "GET",
                "InvocationConfig": {
                  "ConnectionArn": "{% $config.portal_authenticated_connection_arn %}"
                },
                "QueryParameters": {
                  "isAuthoritative": "eq:true",
                  "max": 100
                }
              },
              "Retry": [
                {
                  "ErrorEquals": ["States.ALL"],
                  "BackoffRate": 2,
                  "IntervalSeconds": 1,
                  "MaxAttempts": 3,
                  "JitterStrategy": "FULL"
                }
              ],
              "End": true
            }
          }
        },
        {
          "StartAt": "Get Spatial Fields to Index",
          "States": {
            "Get Spatial Fields to Index": {
              "Type": "Task",
              "Resource": "arn:aws:states:::http:invoke",
              "Arguments": {
                "ApiEndpoint": "{% $config.spatial_service_base_url & '/fieldsdb' %}",
                "Method": "GET",
                "InvocationConfig": {
                  "ConnectionArn": "{% $config.portal_authenticated_connection_arn %}"
                }
              },
              "Retry": [
                {
                  "ErrorEquals": ["States.ALL"],
                  "BackoffRate": 2,
                  "IntervalSeconds": 1,
                  "MaxAttempts": 3,
                  "JitterStrategy": "FULL"
                }
              ],
              "End": true
            }
          }
        }
      ],
      "Assign": {
        "dataResources": "{% $sort($states.result[0]) %}",
        "speciesLists": "{% $states.result[1].ResponseBody.lists{`dataResourceUid`: lastUpdated} %}",
        "spatialFields": "{% $states.result[2].ResponseBody.id%}"
      }
    },
    "Process Data Resources": {
      "Type": "Map",
      "ItemProcessor": {
        "ProcessorConfig": {
          "Mode": "DISTRIBUTED",
          "ExecutionType": "STANDARD"
        },
        "StartAt": "Catch Individual Failures",
        "States": {
          "Catch Individual Failures": {
            "Type": "Parallel",
            "Branches": [
              {
                "StartAt": "Download Data Resource",
                "States": {
                  "Download Data Resource": {
                    "Type": "Task",
                    "Resource": "arn:aws:states:::states:startExecution.sync:2",
                    "Arguments": {
                      "StateMachineArn": "{% $states.context.Execution.Input.config.state_machine_step_wrapper_arn %}",
                      "Input": {
                        "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
                        "config": "{% $states.context.Execution.Input.config %}",
                        "stepArn": "{% $states.context.Execution.Input.config.state_machine_download_arn %}",
                        "stepName": "Download",
                        "rootPipelineName": "{% $states.context.Execution.Input.rootPipelineName %}",
                        "dataResourceId": "{% $states.input.dataResourceId %}",
                        "overwriteLock": "{% $exists($states.context.Execution.Input.originalInput.overwriteLock)? $states.context.Execution.Input.overwriteLock : false %}",
                        "concurrencyLimit": "{% $states.context.Execution.Input.config.max_download_concurrency %}",
                        "forceDownload": "{% $states.context.Execution.Input.originalInput.forceDownload or false %}",
                        "resetAllData": "{% $states.context.Execution.Input.originalInput.resetAllData or false %}"
                      }
                    },
                    "Assign": {
                      "dataResourceId": "{% $states.input.dataResourceId %}"
                    },
                    "Next": "Index Data Resource"
                  },
                  "Index Data Resource": {
                    "Type": "Task",
                    "Resource": "arn:aws:states:::states:startExecution.sync:2",
                    "Arguments": {
                      "StateMachineArn": "{% $states.context.Execution.Input.config.state_machine_step_wrapper_arn %}",
                      "Input": {
                        "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
                        "config": "{% $states.context.Execution.Input.config %}",
                        "stepArn": "{% $states.context.Execution.Input.config.state_machine_index_arn %}",
                        "stepName": "Index",
                        "rootPipelineName": "{% $states.context.Execution.Input.rootPipelineName %}",
                        "dataResourceId": "{% $dataResourceId %}",
                        "overwriteLock": "{% $exists($states.context.Execution.Input.originalInput.overwriteLock)? $states.context.Execution.Input.overwriteLock : false %}",
                        "concurrencyLimit": "{% $states.context.Execution.Input.config.max_index_concurrency %}",
                        "speciesLists": "{% $states.context.Execution.Input.speciesLists %}",
                        "forceIndex": "{% $states.context.Execution.Input.originalInput.forceIndex or false %}"
                      }
                    },
                    "Next": "Process Data Resources Individually?"
                  },
                  "Process Data Resources Individually?": {
                    "Type": "Choice",
                    "Choices": [
                      {
                        "Next": "Do Nothing 2",
                        "Condition": "{% $not($exists($states.context.Execution.Input.originalInput.dataResources)) or $states.context.Execution.Input.dataResources = \"all\"  %}"
                      }
                    ],
                    "Default": "Sample Spatial Layers"
                  },
                  "Do Nothing 2": {
                    "Type": "Pass",
                    "End": true
                  },
                  "Sample Spatial Layers": {
                    "Type": "Task",
                    "Resource": "arn:aws:states:::states:startExecution.sync:2",
                    "Arguments": {
                      "StateMachineArn": "{% $states.context.Execution.Input.config.state_machine_step_wrapper_arn %}",
                      "Input": {
                        "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
                        "config": "{% $states.context.Execution.Input.config %}",
                        "stepArn": "{% $states.context.Execution.Input.config.state_machine_sample_arn %}",
                        "stepName": "Sample",
                        "rootPipelineName": "{% $states.context.Execution.Input.rootPipelineName %}",
                        "dataResourceId": "{% $dataResourceId %}",
                        "overwriteLock": "{% $exists($states.context.Execution.Input.originalInput.overwriteLock)? $states.context.Execution.Input.overwriteLock : false %}",
                        "concurrencyLimit": "{% $states.context.Execution.Input.config.max_sample_concurrency %}",
                        "spatialFields": "{% $states.context.Execution.Input.spatialFields %}",
                        "forceSample": "{% $states.context.Execution.Input.originalInput.forceSample or false %}"
                      }
                    },
                    "Next": "Upload to Solr"
                  },
                  "Upload to Solr": {
                    "Type": "Task",
                    "Resource": "arn:aws:states:::states:startExecution.sync:2",
                    "Arguments": {
                      "StateMachineArn": "{% $states.context.Execution.Input.config.state_machine_step_wrapper_arn %}",
                      "Input": {
                        "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
                        "config": "{% $states.context.Execution.Input.config %}",
                        "stepArn": "{% $states.context.Execution.Input.config.state_machine_solr_arn %}",
                        "stepName": "Solr",
                        "rootPipelineName": "{% $states.context.Execution.Input.rootPipelineName %}",
                        "dataResourceId": "{% $dataResourceId %}",
                        "overwriteLock": "{% $exists($states.context.Execution.Input.originalInput.overwriteLock)? $states.context.Execution.Input.overwriteLock : false %}",
                        "concurrencyLimit": "{% $states.context.Execution.Input.config.max_solr_concurrency %}",
                        "solrCollection": "{% $states.context.Execution.Input.originalInput.solrCollection %}",
                        "forceSolr": "{% $states.context.Execution.Input.originalInput.forceSolr or false %}"
                      }
                    },
                    "End": true
                  }
                }
              }
            ],
            "Catch": [
              {
                "ErrorEquals": ["States.ALL"],
                "Next": "Ignore Error",
                "Output": {
                  "dataResourceId": "{% $states.input.dataResourceId %}",
                  "Error": "{% $states.errorOutput.Error %}"
                }
              }
            ],
            "End": true,
            "Output": "{% $merge([$states.result.Output, {\"dataResourceId\": $states.input.dataResourceId}]) %}"
          },
          "Ignore Error": {
            "Type": "Pass",
            "End": true
          }
        }
      },
      "Next": "Choice",
      "Items": "{% $dataResources %}",
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "Cleanup EMR Cluster"
        }
      ],
      "Output": "{% $states.result %}",
      "Label": "ProcessDataResources",
      "MaxConcurrency": 1000,
      "ItemSelector": {
        "dataResourceId": "{% $states.context.Map.Item.Value %}",
        "config": "{% $config %}",
        "speciesLists": "{% $speciesLists %}",
        "spatialFields": "{% $spatialFields %}",
        "originalInput": "{% $states.context.Execution.Input %}",
        "rootPipelineName": "{% $states.context.Execution.Name %}"
      }
    },
    "Choice": {
      "Type": "Choice",
      "Choices": [
        {
          "Next": "Catch Failures Processing All",
          "Condition": "{% $not($exists($states.context.Execution.Input.dataResources)) or $states.context.Execution.Input.dataResources = \"all\"  %}"
        }
      ],
      "Default": "Cleanup EMR Cluster"
    },
    "Catch Failures Processing All": {
      "Type": "Parallel",
      "Next": "Cleanup EMR Cluster",
      "Branches": [
        {
          "StartAt": "Sample Spatial Layers All",
          "States": {
            "Sample Spatial Layers All": {
              "Type": "Task",
              "Resource": "arn:aws:states:::states:startExecution.sync:2",
              "Arguments": {
                "StateMachineArn": "{% $config.state_machine_step_wrapper_arn %}",
                "Input": {
                  "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
                  "config": "{% $config %}",
                  "stepArn": "{% $config.state_machine_sample_arn %}",
                  "stepName": "Sample",
                  "rootPipelineName": "{% $states.context.Execution.Name %}",
                  "dataResourceId": "all",
                  "overwriteLock": "{% $exists($states.context.Execution.Input.overwriteLock)? $states.context.Execution.Input.overwriteLock : false %}",
                  "spatialFields": "{% $spatialFields %}",
                  "forceSample": "{% $states.context.Execution.Input.forceSample or false %}"
                }
              },
              "Next": "Upload to Solr All"
            },
            "Upload to Solr All": {
              "Type": "Task",
              "Resource": "arn:aws:states:::states:startExecution.sync:2",
              "Arguments": {
                "StateMachineArn": "{% $config.state_machine_step_wrapper_arn %}",
                "Input": {
                  "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
                  "config": "{% $config %}",
                  "stepArn": "{% $config.state_machine_solr_arn %}",
                  "stepName": "Solr",
                  "rootPipelineName": "{% $states.context.Execution.Name %}",
                  "dataResourceId": "all",
                  "overwriteLock": "{% $exists($states.context.Execution.Input.overwriteLock)? $states.context.Execution.Input.overwriteLock : false %}",
                  "solrCollection": "{% $solrCollection %}",
                  "forceSolr": "{% $states.context.Execution.Input.forceSolr or false %}"
                }
              },
              "End": true
            }
          }
        }
      ],
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "Cleanup EMR Cluster",
          "Output": {
            "dataResourceId": "all",
            "Error": "{% $states.errorOutput.Error %}"
          }
        }
      ]
    },
    "Cleanup EMR Cluster": {
      "Type": "Task",
      "Resource": "arn:aws:states:::states:startExecution.sync:2",
      "Arguments": {
        "StateMachineArn": "{% $config.cleanup_emr_cluster_state_machine_arn %}",
        "Input": {
          "AWS_STEP_FUNCTIONS_STARTED_BY_EXECUTION_ID": "{% $states.context.Execution.Id %}",
          "config": "{% $config %}",
          "rootPipelineName": "{% $states.context.Execution.Name %}"
        }
      },
      "Next": "Has Errors and should Switch Index?",
      "Output": "{% $states.input %}"
    },
    "Has Errors and should Switch Index?": {
      "Type": "Choice",
      "Choices": [
        {
          "Next": "Fail",
          "Condition": "{% $exists($states.input.Error) %}"
        },
        {
          "Next": "Switch Active Index",
          "Condition": "{% $states.context.Execution.Input.switchIndex or false %}"
        }
      ],
      "Default": "Do Nothing"
    },
    "Fail": {
      "Type": "Fail",
      "Cause": "{% $string($states.input) %}",
      "Error": "SomeDataResourceProcessingFailed"
    },
    "Switch Active Index": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Output": "{% $states.input %}",
      "Arguments": {
        "FunctionName": "{% $config.lambda_biocache_index_management_arn %}",
        "Payload": {
          "httpMethod": "POST",
          "version": "2",
          "headers": {
            "content-type": "application/json"
          },
          "isBase64Encoded": false,
          "rawQueryString": "",
          "rawPath": "/",
          "routeKey": "/",
          "originatesFromStepFunction": true,
          "body": "{% $string({\n  'query': 'mutation SetActiveIndex($input: SetActiveIndexInput!) {\n    setActiveIndex(input: $input) {\n      index {\n        id\n        active\n      }\n    }\n  }',\n'variables': {\n  'input': {\n    'indexId': $solrCollection\n  }\n}\n}) %}"
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException",
            "Lambda.TooManyRequestsException"
          ],
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "BackoffRate": 2,
          "JitterStrategy": "FULL"
        }
      ],
      "Next": "Sync Occurrence Record Assertions"
    },
    "Sync Occurrence Record Assertions": {
      "Type": "Task",
      "Resource": "arn:aws:states:::http:invoke",
      "Arguments": {
        "ApiEndpoint": "{% $config.biocache_service_base_url & '/sync' %}",
        "Method": "GET",
        "Authentication": {
          "ConnectionArn": "{% $config.portal_authenticated_connection_arn %}"
        }
      },
      "Retry": [
        {
          "ErrorEquals": ["States.ALL"],
          "BackoffRate": 2,
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "JitterStrategy": "FULL"
        }
      ],
      "End": true,
      "Catch": [
        {
          "ErrorEquals": ["States.Http.StatusCode.416"],
          "Next": "Do Nothing",
          "Comment": "Ignore stupid 416 error",
          "Output": "{% $states.input %}"
        }
      ]
    },
    "Do Nothing": {
      "Type": "Pass",
      "End": true
    }
  },
  "QueryLanguage": "JSONata"
}
